<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RepositoryDetailFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="40dp"
        tools:ignore="MissingConstraints">


        <ImageView
            android:id="@+id/image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginStart="50dp"
            android:fontFamily="@font/khula_extrabold"
            android:gravity="start"
            android:text="Full Name"
            app:layout_constraintBottom_toTopOf="@+id/tvBirth"
            tools:layout_editor_absoluteX="79dp" />

        <TextView
            android:id="@+id/tvNameDyn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:fontFamily="@font/khula_extrabold"
            android:gravity="start"
            android:text="Full Name"
            app:layout_constraintBottom_toTopOf="@+id/tvBirth"
            tools:layout_editor_absoluteX="79dp" />

        <TextView
            android:id="@+id/tvCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginStart="50dp"
            android:fontFamily="@font/khula_extrabold"
            android:text="Country"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="79dp" />

        <TextView
            android:id="@+id/tvCountryDyn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:fontFamily="@font/khula_extrabold"
            android:text="Country"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="79dp" />

        <TextView
            android:id="@+id/tvAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginStart="50dp"
            android:fontFamily="@font/khula_extrabold"
            android:gravity="start"
            android:text="Age"
            app:layout_constraintBottom_toTopOf="@+id/tvCountry"
            tools:layout_editor_absoluteX="79dp" />

        <TextView
            android:id="@+id/tvAgeDyn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:fontFamily="@font/khula_extrabold"
            android:gravity="start"
            android:text="Age"
            app:layout_constraintBottom_toTopOf="@+id/tvCountry"
            tools:layout_editor_absoluteX="79dp" />

        <TextView
            android:id="@+id/tvBirth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginStart="50dp"
            android:fontFamily="@font/khula_extrabold"
            android:gravity="start"
            android:text="Birthday"
            app:layout_constraintBottom_toTopOf="@+id/tvAge"
            tools:layout_editor_absoluteX="79dp" />

        <TextView
            android:id="@+id/tvBirthDyn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:fontFamily="@font/khula_extrabold"
            android:gravity="start"
            android:text="Birthday"
            app:layout_constraintBottom_toTopOf="@+id/tvAge"
            tools:layout_editor_absoluteX="79dp" />

    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>